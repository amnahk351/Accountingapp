    <div style="width:80%; margin:0 auto">

        <hr />
        <h5>General Journal</h5>
        <div class="btn-group" role="group" aria-label="Basic example">
            <a href="@Url.Action("GeneralJournal", new { status = "all"})" class="btn btn-success" role="button" aria-pressed="true">
                All
            </a>
            <a href="@Url.Action("GeneralJournal", new { status = "approved"})" class="btn btn-success" role="button" aria-pressed="true">
                Approved
            </a>
            <a href="@Url.Action("GeneralJournal", new { status = "disapproved"})" class="btn btn-success" role="button" aria-pressed="true">
                Disapproved
            </a>
            <a href="@Url.Action("GeneralJournal", new { status = "pending"})" class="btn btn-success" role="button" aria-pressed="true">
                Pending
            </a>
            <a href="@Url.Action("GeneralJournal", new { status = "suspended"})" class="btn btn-success" role="button" aria-pressed="true">
                Suspended
            </a>
        </div>
        <hr />
        <div>
            <table id="GeneralJournalTable" class="table table-responsive table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>EntryID</th>
                        <th>Accounts Affected</th>
                        <th>Debit</th>
                        <th>Credit</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.entries.Count; i++)
                    {
                        <tr data-toggle="modal"
                            data-id=@Model.entries[i].entryID
                            data-accounts="@Model.entries[i].FormattedAccountNames()"
                            data-debits="@Model.entries[i].FormattedDebits()"
                            data-credits="@Model.entries[i].FormattedCredits()"
                            data-comment="@Model.entries[i].comment"
                            data-target="#entryModal">
                            
                            <td>@Model.entries[i].submitDate</td>
                            <td>@Model.entries[i].entryID</td>
                            <td style="white-space: pre-wrap;">@Model.entries[i].FormattedAccountNames()</td>
                            <td align="right" style="white-space: pre-wrap;">@Model.entries[i].FormattedDebits()</td>
                            <td align="right" style="white-space: pre-wrap;">@Model.entries[i].FormattedCredits()</td>
                            <td>@Model.entries[i].status</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <hr />

        <div id="entryModal" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header" id="EntryIdModalTitle"></div>
                    <div class="modal-body">
                        <table id="ModalTable" class="table table-responsive table-striped" style="width:100%">
                            <thead>
                                <tr>
                                    <td>Accounts Affected</td>
                                    <td>Debits</td>
                                    <td>Credits</td>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td id="AccountsModal" style="white-space: pre-wrap;"></td>
                                    <td id="DebitsModal" style="white-space: pre-wrap;"></td>
                                    <td id="CreditsModal" style="white-space: pre-wrap;"></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="modal-header">Comments</div>
                    <div class="modal-body" id="CommentModal"></div>
                    <div class="modal-body" id="FilesModal"></div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

    </div>

