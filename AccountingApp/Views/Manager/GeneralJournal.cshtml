    <script>
        $(function () {
            $('#entryModal').modal({
                keyboard: true,
                backdrop: "static",
                show: false,

            }).on('show.bs.modal', function () { //subscribe to show method
                var getIdFromRow = $(event.target).closest('tr').data('id'); 
                var getEntriesFromRow = $(event.target).closest('tr').data('accounts');
                var getDebitsFromRow = $(event.target).closest('tr').data('debits');
                var getCreditsFromRow = $(event.target).closest('tr').data('credits');
                var getComment = $(event.target).closest('tr').data('comment');
                //make your ajax call populate items or what even you need
                $(this).find('#EntryIdModalTitle').html($('<b> Entry Id selected: ' + getIdFromRow + '</b>'))
                $(this).find('#AccountsModal').html($('<p>' + getEntriesFromRow + '</p>'))
                $(this).find('#DebitsModal').html($('<p>' + getDebitsFromRow + '</p>'))
                $(this).find('#CreditsModal').html($('<p>' + getCreditsFromRow + '</p>'))
                $(this).find('#CommentModal').html($('<p>' + getComment + '</p>'))
            });
        });
    </script>

