    <script>

        function LoadAccountList() {

            document.getElementById("UpdateDescription").value = "";
            document.getElementById('DescriptionError').innerText = "";

            var Query;

            $.ajax(
                {
                    url: '/Accountant/GetAllAccountNames/',
                    type: "GET",
                    async: false,
                    dataType: "json",
                    contentType: "application/json;",
                    //data: { "id": Id },
                    success: function (result) {
                        //alert(result);
                        Query = result;

                    },
                    error: function (error) {
                        //alert(JSON.stringify(error));
                    }
                });


            var Q1 = Query.replace("[", "");
            var Q2 = Q1.replace("]", "");
            var res = Q2.split("\",\"");

            for (var i = 0; i < res.length; i++) {
                var Account = res[i].replace(/"/g, "");

                var x = document.getElementById("AccountSelect");
                var option = document.createElement("option");
                option.text = Account;
                x.add(option);

            }
        }

    </script>

    <script>

        function SubmitUpdateRequest() {


            var de = document.getElementById("UpdateDescription").value;
            if (de == "") {

                $.ajax({
                    url: "/Account/GetErrors",
                    method: 'post',
                    dataType: 'json',
                    success: function (data) {
                        document.getElementById('DescriptionError').innerText = data[55];
                    }
                });

                return;
            } else {
                //There is something to submit

                //Get selected account
                var skillsSelect = document.getElementById("AccountSelect");
                var name = skillsSelect.options[skillsSelect.selectedIndex].text;

                $.ajax({
                    url: "/Accountant/RequestAccountUpdate",
                    contentType: "application/json; charset=utf-8",
                    data: "{'name':'" + name + "', 'comment':'" + de + "'}",
                    type: 'POST',
                    cache: false,
                    success: function (result) {
                        alert(result);
                    }
                });

                //alert("Your update request has been submitted.");

                //Simulate button click to close modal
                document.getElementById('CloseUpdateModal').click();


                document.getElementById("UpdateDescription").value = "";
                document.getElementById('DescriptionError').innerText = "";

            }

        }


        function SubmitAccountRequest() {

            var num = document.getElementById("AccountNumber").value;
            if (num == "") {

                $.ajax({
                    url: "/Account/GetErrors",
                    method: 'post',
                    dataType: 'json',
                    success: function (data) {
                        document.getElementById('NumberError').innerText = data[50];
                    }
                });
            }

            var name = document.getElementById("AccountName").value;
            if (name == "") {

                $.ajax({
                    url: "/Account/GetErrors",
                    method: 'post',
                    dataType: 'json',
                    success: function (data) {
                        document.getElementById('NameError').innerText = data[51];
                    }
                });
            }

            var Select = document.getElementById("AccountType");
            var type = Select.options[Select.selectedIndex].text;

            if (type == "Select..") {

                $.ajax({
                    url: "/Account/GetErrors",
                    method: 'post',
                    dataType: 'json',
                    success: function (data) {
                        document.getElementById('AccountTypeError').innerText = data[52];
                    }
                });
            }

            var Select2 = document.getElementById("NormalSide");
            var side = Select2.options[Select2.selectedIndex].text;
            if (side == "Select..") {

                $.ajax({
                    url: "/Account/GetErrors",
                    method: 'post',
                    dataType: 'json',
                    success: function (data) {
                        document.getElementById('AccountSideError').innerText = data[53];
                    }
                });
            }

            var bal = document.getElementById("OriginalBalance").value;
            if (bal == "") {

                $.ajax({
                    url: "/Account/GetErrors",
                    method: 'post',
                    dataType: 'json',
                    success: function (data) {
                        document.getElementById('AccountOriginalBalanceError').innerText = data[54];
                    }
                });
            }

            if (num == "" || name == "" || type == "Select.." || side == "Select.." || bal == "") {
                return;
            }

            else {
                //Something to submit

                var comm = document.getElementById("Description").value;


                $.ajax({
                    url: "/Accountant/RequestAccount",
                    contentType: "application/json; charset=utf-8",
                    data: "{'number':'" + num + "', 'name':'" + name + "', 'type':'" + type + "', 'side':'" + side + "', 'balance':'" + bal + "', 'comment':'" + comm + "'}",
                    type: 'POST',
                    cache: false,
                    success: function (result) {
                        alert(result);
                    }
                });

                //alert("Your account request has been submitted.");

                //Simulate button click to close modal
                document.getElementById('CloseModal').click();


                document.getElementById('AccountNumber').value = "";
                document.getElementById('AccountName').value = "";
                document.getElementById("AccountType").selectedIndex = "0";
                document.getElementById("NormalSide").selectedIndex = "0";
                document.getElementById('OriginalBalance').value = "";
                document.getElementById('Description').value = "";


                document.getElementById('NumberError').innerText = "";
                document.getElementById('NameError').innerText = "";
                document.getElementById('AccountTypeError').innerText = "";
                document.getElementById('AccountSideError').innerText = "";
                document.getElementById('AccountOriginalBalanceError').innerText = "";
            }

        }

