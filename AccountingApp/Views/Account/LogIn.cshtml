
@model AccountingApp.Models.CreateUser
@{
    Layout = null;
}
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")
@{
    ViewBag.Title = "Log In";
}

<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="//use.fontawesome.com/releases/v5.5.0/css/all.css" rel="stylesheet" />
    <style>
        #login-div {
            position: absolute;
            left: 40%;
            top: 40%;
            padding: 10px 10px;
        }

        body {
            margin: 0;
            padding: 0;
            font-family: sans-serif;
            background: url(ac.jpg);
            background-color: gainsboro;
        }

        .login-box {
            width: 400px;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%,-50%);
            color: dodgerblue;
            border-radius: 10px;
            background-color: #FFFFFF;
            padding: 35px;
            box-shadow: 10px 10px 5px grey;
        }

            .login-box h1 {
                float: left;
                font-size: 40px;
                border-bottom: 4px solid #1388D2;
                margin-bottom: 50px;
                padding: 13px 0;
            }

        .textbox {
            width: 100%;
            overflow: hidden;
            font-size: 20px;
            padding: 8px 0;
            margin: 8px 0;
            border-bottom: 1px solid #1388D2;
        }

            .textbox i {
                width: 26px;
                float: left;
                text-align: center;
            }

            .textbox input {
                border: none;
                outline: none;
                background: none;
                color: black;
                font-size: 18px;
                width: 80%;
                float: left;
                margin: 0 10px;
            }

        .btn {
            width: 100%;
            background: none;
            background-color: #1E90FF;
            border: 2px solid #1388D2;
            color: white;
            padding: 10px;
            font-size: 18px;
            cursor: pointer;
            margin: 12px 0;
        }

        .reset a {
            color: dodgerblue;
        }
    </style>
</head>




<div class="container-fluid">
    <div id="login-box">
        @using (Html.BeginForm("Authenticate", "Account", FormMethod.Post))
        {
            <div class="login-box">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <h1>Login</h1>
                <div class="textbox">
                    <i class="fas fa-user"></i>
                    @Html.LabelFor(model => model.Username)
                    @Html.EditorFor(model => model.Username)
                </div>
                <br />
                <div>
                    @Html.ValidationMessageFor(model => model.Username, "")
                </div>
                <br />
                <div class="textbox">
                    <i class="fas fa-lock"></i>
                    @Html.LabelFor(model => model.Password)
                    @Html.PasswordFor(model => model.Password)
                </div>
                <br />
                <div>
                    @Html.ValidationMessageFor(model => model.Password, "")
                </div>
                <br />

                <input type="submit" name="Login" value="Login" class="btn  margin-left" />
                <br />
                <br />

                <div class="reset">
                    <a href="">Forgot Password?</a>
                </div>
            </div>
        }

    </div>
</div>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>