@model AccountingApp.Models.AccountRecoveryModel

@{
    ViewBag.Title = "Account Recovery";
    Layout = "~/Views/Shared/_Layout-Account.cshtml";
}

<style>

    .form-control.text-box.single-line {
        /*width: 100%;
        overflow: hidden;
        font-size: 20px;
        padding: 8px 0;
        margin: 8px 0;
        padding-left: 10px;*/
        border: 2px solid dodgerblue;
        border-radius: 6px;
    }

    .button_example {
        width: 30%;
    }

    .container.body-content {
        padding-bottom: 5px;
    }

    .text-danger {
        color: red;
        font-size: 14px;
    }

</style>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h1 style="font-size: 28px; color:dodgerblue;border-bottom: 4px solid dodgerblue;margin-bottom: 5px;padding: 5px">Account Recovery</h1>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="form-group">

        <div class="col-md-10">
            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
        </div>
    </div>

    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="form-group">

        <div class="col-md-10">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Next" class="button_example" />
        </div>
    </div>

    <br />

    <div class="text-danger">
        @ViewBag.Message
    </div>
</div>
}

<br />
<div>
    @Html.ActionLink("Back to Login", "Login")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
