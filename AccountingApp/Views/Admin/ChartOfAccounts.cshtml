            <div class="body-content" style="width:100%; margin:0 auto">


                <div>
                    <h4 style="display:inline">Chart Of Accounts</h4>

                    <a type=" button" href="@Url.Action("NewAccount")" class="btn btn-success btn-lg" role="button" aria-pressed="true" style="float:right">
