                        </button>
                        @TempData["Message"]
                    </div>
                }

                <table id="Accountstable" class="table table-responsive table-hover shadow " style="font-size:1.1rem; background-color:white; width:100%; box-shadow: 2px 6px 6px 2px lightgray;">
                    <thead class="shadow" style="background-color:white; ">
                        <tr>
                            <th style="width:10%">Account Number</th>
                            <th style="width:20%">Account Name</th>
                            <th style="width:10%">Account Type</th>
                            <th style="width:10%">Normal Side</th>
                            <th style="width:10%">Original Balance</th>
                            <th style="width:10%">Current Balance</th>
                            <th style="width:10%">Account Description</th>
                            <th style="width:10%">Active</th>
                            <th style="width:10%">Created By</th>
                            <th style="width:10%">Edit</th>

                        </tr>
                    </thead>
                    <tbody>

                        @for (int i = 0; i < Model.Count(); i++)
                        {
                            <tr>
                                <td>@Model[i].AccountNumber</td>
                                <td>@Model[i].AccountName</td>
                                <td>@Model[i].AccountType</td>
                                <td>@Model[i].NormalSide</td>
                                <td style="text-align:end">@Model[i].OriginalBalString</td>
                                <td style="text-align:end">@Model[i].CurrentBalString</td>
                                <td>@Model[i].AccountDescription</td>
                                <td>@(Model[i].Active ? "Y" : "N")</td>
                                <td>@Model[i].CreatedBy</td>
                                <td>

                                    <a href="@Url.Action("EditAccount", new { id = Model[i].AccountNumber})">
                                        <i class="fas fa-edit" style="color:#3e547f"></i>

                                    </a>

                                    @*<a href="@Url.Action("Delete", new { id = Model[i].AccountNumber})">
