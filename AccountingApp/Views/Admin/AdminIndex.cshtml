                        { y: -2000, color: 'red' },
                        { y: 6000, color: 'green' },
                        { y: 6000, color: 'green' }],
                    showInLegend: false
                }]

            });






            Highcharts.chart('equity', {
                chart: {
                    plotBackgroundColor: null,
                    plotBorderWidth: null,
                    plotShadow: false,
                    type: 'pie'
