                    name: 'Net Income',

                    type: 'column',
                    colorByPoint: true,
                    data: [{ y: 6000, color: 'green' },
                        { y: 2000, color: 'green' },
                        { y: 3000, color: 'green' },
                        { y: 6000, color: 'green' },
