<script>

        function LogOutUser() {

            var username = '@Session["Username"]';

            $.ajax({
                url: "/Account/LogOutUser",
                contentType: "application/json; charset=utf-8",
                data: "{'username':'" + username + "'}",
                type: 'POST',
                cache: false,
                success: function (result) {
                    //alert(result);
                }
            });

            window.location.href = '../../Account/Login';
        }

</script>











































































































