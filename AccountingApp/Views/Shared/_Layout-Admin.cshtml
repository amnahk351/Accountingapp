<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Objective Accounting</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @*<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">*@
    @*link is for symbols/icons of navbar if wanted*@
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    @*link above is for user icon*@
    <style>

        body {
            padding-top: 0px; /*Do not delete this line, it's an override*/
            margin: 0;
            font-family: Arial;
        }


        .mynav_navbar {
            overflow: hidden;
            background-color: silver;
            font-family: inherit;
            width: 100%;
            position: fixed;
            /*display: inline-block;*/
            /*height: 80px;*/
        }

            .mynav_navbar a {
                float: left;
                /*display: inline-block;*/
                font-size: 23px;
                color: black;
                text-align: center;
                padding: 20px 25px;
                /*margin: 16px;*/
                text-decoration: none;
            }

            .mynav_navbar .icon {
                display: none;
            }

        .mynav_dropdown {
            float: left;
            overflow: hidden;
        }

            .mynav_dropdown .mynav_dropbtn {
                font-size: 23px;
                border: none;
                outline: none;
                color: black;
                padding: 20px 25px;
                background-color: inherit;
                font-family: inherit;
                margin: 0;
            }

            .mynav_navbar a:hover, .mynav_dropdown:hover .mynav_dropbtn {
                background-color: #0087ff;
                color: white;
            }

        .mynav_dropdown-content {
            display: none;
            position: fixed;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

            .mynav_dropdown-content a {
                float: none;
                color: black;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
                text-align: left;
            }

                .mynav_dropdown-content a:hover {
                    background-color: #ddd;
                    color: black;
                }

        .mynav_dropdown:hover .mynav_dropdown-content {
            display: block;
        }

        .footer {
            position: fixed;
            right: 0;
            bottom: 0;
            left: 0;
            padding: 15px;
            text-align: center;
            background-color: #0066ff;
            color: white;
        }

        @@media screen and (max-width: 600px) {
            .mynav_navbar a:not(:first-child), .mynav_dropdown .mynav_dropbtn {
                display: none;
            }

            .mynav_navbar a.icon {
                float: right;
                display: block;
            }
        }

        @@media screen and (max-width: 600px) {
            .mynav_navbar.responsive {
                position: relative;
            }

                .mynav_navbar.responsive .icon {
                    position: absolute;
                    right: 0;
                    top: 0;
                }

                .mynav_navbar.responsive a {
                    float: none;
                    display: block;
                    text-align: left;
                }

                .mynav_navbar.responsive .mynav_dropbtn {
                    float: none;
                }

                .mynav_navbar.responsive .mynav_dropdown-content {
                    position: relative;
                }

                .mynav_navbar.responsive .mynav_dropdown .mynav_dropbtn {
                    display: block;
                    width: 100%;
                    text-align: left;
                }
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-static-top" style="cursor: pointer">
        <div class="mynav_navbar" id="Nav_Navbar">
            <img src="~/img/Accounting Logo.PNG" width="190" height="55" style="cursor: pointer; float:left; margin: 8px 16px;" /> @*maybe add this: href="#" if we want it to go anywhere*@
            <a asp-area="" asp-controller="Home" asp-action="Home">Home</a>
            <div class="mynav_dropdown">
                <button class="mynav_dropbtn">
                    Users
                    @*<i class="fa fa-user"></i>*@
                </button>
                <div class="mynav_dropdown-content">
                    <a asp-area="" asp-controller="View Users" asp-action="View Users">View Users</a>
                    <a asp-area="" asp-controller="Create New User" asp-action="Create New User">Create New User</a>
                </div>
            </div>
            <div class="mynav_dropdown">
                <button class="mynav_dropbtn">
                    Chart of Accounts
                    @*<i class="fa fa-caret-down"></i>*@
                </button>
                <div class="mynav_dropdown-content">
                    <a asp-area="" asp-controller="View Chart of Accounts" asp-action="View Chart of Accounts">View Chart of Accounts</a>
                    <a asp-area="" asp-controller="Create New Account" asp-action="Create New Account">Create New Account</a>
                    @*<a href="#">Link 1</a>
                    <a href="#">Link 2</a>
                    <a href="#">Link 3</a>*@
                </div>
            </div>
            <div class="mynav_dropdown">
                <button class="mynav_dropbtn">
                    Statistics
                    @*<i class="fa fa-caret-down"></i>*@
                </button>
                <div class="mynav_dropdown-content">
                    <a asp-area="" asp-controller="User Statistics" asp-action="User Statistics">User Statistics</a>
                    <a asp-area="" asp-controller="System Statistics" asp-action="System Statistics">System Statistics</a>
                </div>
            </div>
            <a asp-area="" asp-controller="Event Logs" asp-action="Event Logs">Event Logs</a>





            <div class="mynav_dropdown" style="float:right">
                
                <button class="mynav_dropbtn">
                    @*<i id="LoggedName" style="cursor: auto; color: black; font-size: 23px;">Welcome, Admin</i>*@
                    Account
                    <i class="fas fa-user" @*style="padding-left: 7px;"*@></i>
                </button>
                <div class="mynav_dropdown-content" style="right: 0;">
                    <a asp-area="" asp-controller="View Profile" asp-action="View Profile">View Profile</a>
                    <a asp-area="" asp-controller="Settings" asp-action="Settings">Settings</a>
                    <a asp-area="" asp-controller="Sign Out" asp-action="Sign Out">Sign Out</a>
                </div>
            </div>

            <i id="LoggedName" class="navbar-text" style="cursor: auto; float:right; color: black; font-size: 23px; padding-top: 4px;">Welcome, Admin</i>




            <a href="javascript:void(0);" style="font-size:15px;" class="icon" onclick="myFunction()">&#9776;</a>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <div class="footer">
            <footer>
                @*<hr style="border-color: gray; width: 70%"/>*@
                <p>
                    &copy; @DateTime.Now.Year - Objective Accounting
                    Jared Breedlove, Amnah Ilyas, Quillan May, Colt McKissick, Broderick Thayer, and Zachary Thayer
                </p>
            </footer>
        </div>
    </div>

    <script>
        function myFunction() {
            var x = document.getElementById("Nav_Navbar");
            if (x.className === "mynav_navbar") {
                x.className += " responsive";
            } else {
                x.className = "mynav_navbar";
            }
        }
    </script>
    <script type="text/javascript">

    window.onload = function () {
        var username = '@Session["FirstNameofUser"]';
        document.getElementById("LoggedName").innerHTML = "Welcome, " + username;
    };

    </script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
