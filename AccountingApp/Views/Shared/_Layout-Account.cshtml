<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Objective Accounting</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>

        body {
            padding-top: 0px; /*Do not delete this line, it's an override*/
            margin: 0;
            padding: 0;
            background-image: url('../../img/ac.jpg');
            background-repeat: no-repeat;
            background-size: cover;
            background-color: gainsboro;
            font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
            font-size: 18px;
        }

        .container.body-content {
            width: 400px;
            position: absolute;
            top: 50%;
            left: 40%;
            transform: translate(0%,-50%);
            color: dodgerblue;
            border-radius: 10px;
            background-color: #FFFFFF;
            padding-left: 31px;
            padding-right: 31px;
            padding-top: 25px;
            padding-bottom: 20px;
            border-style: solid;
            border-width: 5px;
            border-color: #1202FF;
            /*opacity: 0.9;*/
            animation: 1s ease-out 0s 1 slideInFromTop;
        }

        @@keyframes slideInFromTop {
            0% {
                transform: translateY(-100%);
            }

            100% {
                transform: translateY(-50%);
            }
        }

        .button_example {
            width: 100%;
            border: 2px solid #25729a;
            -webkit-border-radius: 3px;
            -moz-border-radius: 3px;
            border-radius: 3px;
            font-size: 20px;
            font-family: arial;
            padding: 10px 10px 10px 10px;
            text-decoration: none;
            display: inline-block;
            text-shadow: -1px -1px 0 rgba(0,0,0,0.3);
            font-weight: bold;
            color: #FFFFFF;
            background-color: #3093c7;
            background-image: -webkit-gradient(linear, left top, left bottom, from(#3093c7), to(#1c5a85));
            background-image: -webkit-linear-gradient(top, #3093c7, #1c5a85);
            background-image: -moz-linear-gradient(top, #3093c7, #1c5a85);
            /*background-image: -ms-linear-gradient(top, #3093c7, #1c5a85);*/
            background-image: -o-linear-gradient(top, #3093c7, #1c5a85);
            background-image: linear-gradient(to bottom, #3093c7, #1c5a85);
            filter: progid:DXImageTransform.Microsoft.gradient(GradientType=0,startColorstr=#3093c7, endColorstr=#1c5a85);
        }

            .button_example:hover {
                border: 2px solid #1c5675;
                background-color: #26759e;
                background-image: -webkit-gradient(linear, left top, left bottom, from(#26759e), to(#133d5b));
                background-image: -webkit-linear-gradient(top, #26759e, #133d5b);
                background-image: -moz-linear-gradient(top, #26759e, #133d5b);
                /*background-image: -ms-linear-gradient(top, #26759e, #133d5b);*/
                background-image: -o-linear-gradient(top, #26759e, #133d5b);
                background-image: linear-gradient(to bottom, #26759e, #133d5b);
                filter: progid:DXImageTransform.Microsoft.gradient(GradientType=0,startColorstr=#26759e, endColorstr=#133d5b);
            }

        /*.form-control.text-box.single-line {
            width: 100%;
            overflow: hidden;
            font-size: 20px;
            padding: 8px 0;
            margin: 8px 0;
            border: 2px solid dodgerblue;
            border-radius: 6px;
        }*/


        .textbox {
            width: 100%;
            overflow: hidden;
            font-size: 20px;
            padding: 8px 0;
            margin: 8px 0;
            border: 2px solid dodgerblue;
            border-radius: 6px;
        }

            .textbox i {
                width: 26px;
                float: left;
                text-align: center;
            }

            .textbox input {
                border: none;
                outline: none;
                background: none;
                color: black;
                font-size: 18px;
                width: 100%;
                float: left;
                margin: 0 10px;
            }

        .field-validation-error.text-danger {
            color: red;
            font-size: 14px;
        }

        /*.control-label.col-md-2 {
            margin-top: 25px;
        }*/

        
    </style>
</head>
<body>
    
    <div class="container body-content">
        <img src="~/img/Accounting Logo.PNG" alt="Logo" width="330" height="110" />
        @RenderBody()
        <footer></footer>
    </div>
        
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
