        <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css" />*@
    @*added the 3 links above to see if collapse would work*@

    <style>
       
        body {
            padding-top: 0px; /*Do not delete this line, it's an override*/
            display: block;
            margin: 0px;
            background: #f4f4f4;
        }

        .navbar {
            /*overflow: hidden;*/ /*important to keep this hidden or dropdown will be within/behind navbar*/
            background-color: silver;
            font-family: Arial, Helvetica, sans-serif;
            text-align: center;
            /*padding: 14px 16px;*/
            /*padding: 0rem 1rem;*/
            /*padding: 0px;*/
        }

            .navbar a {
                /*float: left;*/
                display: inline-block;
                font-size: 20px;
                color: black; /*text color for non-dropdown headings*/
                /*text-align: center;*/
                /*padding: 0rem 1rem;*/
                padding: 14px 16px;
                /*padding: 24px 25px; crucial for horizontal spacing*/
                text-decoration: none;
            }

        .nav_dropdown {
            float: left; /*don't think it does anything*/
            overflow: hidden;
            color: black; /*color for dropdown headings*/
        }

            .nav_dropdown .nav_dropbtn {
                font-size: 20px;
                border: none;
                outline: none;
                /*color: black; dont think this does anything*/
                padding: 14px 16px;
                /*padding: 24px 25px; crucial for horizontal spacing*/
                background-color: inherit;
                font-family: inherit;
                margin: 0;
            }

            .navbar a:hover, .nav_dropdown:hover .nav_dropbtn {
                background-color: #0087ff; /*hover color for each heading*/
                color: black; /*color for individual links within dropdown*/
                cursor: pointer;
            }

        .nav_dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

            .nav_dropdown-content a {
                float: none;
                color: black;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
                text-align: left;
            }

                .nav_dropdown-content a:hover {
                    text-decoration: none;
                    background-color: #ddd;
                    /*color: white;*/
                }

        .nav_dropdown:hover .nav_dropdown-content {
            display: block;
        }
    </style>
</head>
<body>

   

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer align="center">
            <p>
                &copy; @DateTime.Now.Year - Objective Accounting -
                Jared Breedlove, Amnah Ilyas, Quillan May, Colt McKissick, Broderick Thayer, and Zachary Thayer
            </p>
        </footer>
    </div>

    <script type="text/javascript">
    window.onload = function () {
        var username = '@Session["FirstNameofUser"]';
        document.getElementById("LoggedName").innerHTML = "Welcome, " + username;
    };
    </script>

