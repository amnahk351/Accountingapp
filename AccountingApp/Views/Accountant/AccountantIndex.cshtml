    <script>

        function PopulateEntryModal(button) {

            var row = $(button).closest('tr');
            var table = document.getElementById("GeneralJournalTable");

            var ID = table.rows[row[0].rowIndex].cells[1].innerText;
            var ModalID = document.getElementById("ModalEntryID");
            ModalID.innerHTML = "ID: " + ID;

            var Date = table.rows[row[0].rowIndex].cells[0].innerText;
            var ModalDate = document.getElementById("ModalDate");
            ModalDate.innerHTML = "Date Created: " + Date;

            var Stat = table.rows[row[0].rowIndex].cells[5].innerText;
            var ModalStat = document.getElementById("ModalStatus");
            ModalStat.innerHTML = "Status: " + Stat;


            var Accounts = table.rows[row[0].rowIndex].cells[2].innerText;            
            var text = Accounts.replace(/\t/g, "&nbsp;&nbsp;&nbsp;");
            var res0 = text.split("\n");
            var finalAcc = "";

            for (i = 0; i < res0.length; i++) {
                
                finalAcc += res0[i] + "<br>";
            }

            var ModalAcc = document.getElementById("AccNames");
            ModalAcc.innerHTML = finalAcc;


            var De = table.rows[row[0].rowIndex].cells[3].innerText;
            var res = De.split("\n");
            var finalDe = "";

            for (i = 0; i < res.length; i++) {
                finalDe += res[i] + "<br>";
            }

            var ModalDe = document.getElementById("Debs");
            ModalDe.innerHTML = finalDe;


            var Cr = table.rows[row[0].rowIndex].cells[4].innerText;
            var res2 = Cr.split("\n");
            var finalCr = "";

            for (i = 0; i < res2.length; i++) {
                finalCr += res2[i] + "<br>";
            }

            var ModalCr = document.getElementById("Creds");
            ModalCr.innerHTML = finalCr;

            
            var Query;

            $.ajax(
                {
                    url: '/Accountant/RetrieveAccountantAndComment/',
                    type: "GET",
                    async: false,
                    dataType: "json",
                    contentType: "application/json;",
                    data: { "id": ID },
                    success: function (result) {
                        //alert(result);
                        Query = result;

                    },
                    error: function (error) {
                        //alert(JSON.stringify(error));
                    }
                });

            var Query2 = Query.replace(/"/g, "");
            var resul = Query2.split("|^|");

            var Accountant = resul[0];
            var AccountantComment = resul[1];

            var ModalUser = document.getElementById("ModalUsername");
            var ModalComm = document.getElementById("ModalComment");

            if (AccountantComment == "") {
                ModalComm.innerText = "N/A";
            } else {
                ModalComm.innerText = AccountantComment;
            }

            ModalUser.innerText = Accountant;

            $("#ModalFiles tr").remove(); 
            GetAllRelatedFiles(ID);
           
        }

    </script>

    <script>

        function GetAllRelatedFiles(Id) {

            var Query;

            $.ajax(
                {
                    url: '/Accountant/GetAllFiles/',
                    type: "GET",
                    async: false,
                    dataType: "json",
                    contentType: "application/json;",
                    data: { "id": Id },
                    success: function (result) {                        
                        Query = result;

                    },
                    error: function (error) {
                        alert(JSON.stringify(error));
                    }
                });


            
            var Q1 = Query.replace("[", "");
            var Q2 = Q1.replace("]", "");            
            var res = Q2.split("\",\"");

            for (var i = 0; i < res.length; i++) {
